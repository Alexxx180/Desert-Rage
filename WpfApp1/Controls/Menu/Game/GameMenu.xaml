<UserControl x:Class="DesertRage.Controls.Menu.Game.GameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesertRage.Controls.Menu.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7375*"/>
            <ColumnDefinition Width="0.2625*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8112*"/>
            <RowDefinition Height="0.13*"/>
            <RowDefinition Height="0.0588*"/>
        </Grid.RowDefinitions>

        <Image x:Name="Menu1" Stretch="Fill">
            <Grid.RowSpan>
                3
            </Grid.RowSpan>
            <Grid.ColumnSpan>
                2
            </Grid.ColumnSpan>
            
            <Image.Source>
                /Resources/Images/Menu/Kinds/Menu3.png
            </Image.Source>
        </Image>

        <Grid Grid.Row="2" Grid.Column="1" Panel.ZIndex="11">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <Viewbox>
                <TextBlock x:Name="Describe2" Text="Статус героя" FontFamily="Britannic Bold" Foreground="White">
                    
                </TextBlock>
            </Viewbox>
        </Grid>
        
        
    </Grid>
</UserControl>