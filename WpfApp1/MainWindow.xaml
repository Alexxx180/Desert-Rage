            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Звуковое сопровождение-->
        <MediaElement x:Name="Sound1" MediaEnded="Sound1_MediaEnded">
            <MediaElement.Source>
                /Resources/OST/Music/Main_theme.mp3
            </MediaElement.Source>
            
            <MediaElement.Visibility>
                Collapsed
            </MediaElement.Visibility>
            
            <MediaElement.Volume>
                <Binding ElementName="MusicLoud" Path="Value"/>
            </MediaElement.Volume>
            
            <MediaElement.LoadedBehavior>
                Manual
            </MediaElement.LoadedBehavior>
        </MediaElement>

        <MediaElement x:Name="Sound2" MediaEnded="Sounds_Ended">
            <MediaElement.Source>
                /Resources/OST/Noises/Punch.mp3
            </MediaElement.Source>

            <MediaElement.Visibility>
                Collapsed
            </MediaElement.Visibility>

            <MediaElement.Volume>
                <Binding ElementName="NoiseLoud" Path="Value"/>
            </MediaElement.Volume>

            <MediaElement.LoadedBehavior>
                Manual
            </MediaElement.LoadedBehavior>
        </MediaElement>

        <MediaElement x:Name="Sound3" MediaEnded="Sounds_Ended">
            <MediaElement.Source>
                /Resources/OST/Sounds/ChestOpened.mp3
            </MediaElement.Source>

            <MediaElement.Visibility>
                Collapsed
            </MediaElement.Visibility>

            <MediaElement.Volume>
                <Binding ElementName="SoundsLoud" Path="Value"/>
            </MediaElement.Volume>

            <MediaElement.LoadedBehavior>
                Manual
            </MediaElement.LoadedBehavior>
        </MediaElement>

        <!--Карта-->
        <Viewbox Grid.Row="32" Grid.Column="53" Grid.RowSpan="4" Grid.ColumnSpan="7" Panel.ZIndex="6" HorizontalAlignment="Right">
            <Label x:Name="TimerFlees" Content="2:30" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" FontFamily="Bauhaus 93" FontSize="72" Panel.ZIndex="7" Grid.Column="53" Grid.Row="32" Visibility="Hidden" Grid.ColumnSpan="7" Grid.RowSpan="4" BorderBrush="#FF00DCFF" BorderThickness="8,8,8,8" Foreground="White" />
        </Viewbox>

        <!--Модели на карте-->
        <Image x:Name="Img1" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" Source="/Resources/Images/Locations/Regular/New_game_show.jpg" Grid.Column="0" Grid.Row="0" Visibility="Hidden" Grid.ColumnSpan="60" Grid.RowSpan="36" Panel.ZIndex="3" IsEnabled="False"/>
        <ProgressBar x:Name="HPhelper" Grid.Row="33" Grid.Column="17" Grid.ColumnSpan="3" Value="{Binding ElementName=HPbar1, Path=Value}" Minimum="0" Maximum="{Binding ElementName=HPbar1, Path=Maximum}" Visibility="Hidden" Panel.ZIndex="5">
            <ProgressBar.Foreground>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#FF3AAC28"/>
                    <GradientStop Color="#FF00F3FF" Offset="1"/>
                    <GradientStop Color="#FF0EDEAF" Offset="0.512"/>
                </LinearGradientBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
        
        <Image x:Name="BrightnessImg" IsHitTestVisible="False" Grid.ColumnSpan="60" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.RowSpan="36" VerticalAlignment="Top" Panel.ZIndex="25" Source="/Resources/Images/Locations/Regular/AbsoluteBlack.jpg" Stretch="Fill" Visibility="Visible" IsEnabled="False">
            <Image.Opacity>
                <Binding ElementName="Brightness" Path="Value" Converter="{StaticResource InvertConverter}" ConverterParameter="1"></Binding>
            </Image.Opacity>
        </Image>

        <Grid x:Name="Pause" Grid.RowSpan="36" Grid.ColumnSpan="60" Background="#7F000000" Panel.ZIndex="25" Visibility="Hidden" IsEnabled="False">
            <Label Content="Pause | Пауза" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="96" FontFamily="Cambria" FontWeight="Bold">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFB9809" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
    </Grid>
</Window>
