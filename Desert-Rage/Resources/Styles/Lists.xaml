<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="OrdinaryList" TargetType="ItemsControl">
        <Style.BasedOn>
            <StaticResource ResourceKey="GlobalFont"/>
        </Style.BasedOn>

        <Setter Property="FontSize" Value="24"/>
        <Setter Property="BorderBrush" Value="#8A000000"/>
        <Setter Property="Background" Value="#8A000000"/>
    </Style>

    <Style x:Key="RangerItems" TargetType="ContentControl" BasedOn="{StaticResource WhiteOption}">
        <Style.Resources>
            <SolidColorBrush x:Name="Focused"
                             x:Key="{x:Static SystemColors.HighlightBrushKey}">
                <SolidColorBrush.Color>
                    LightBlue
                </SolidColorBrush.Color>

                <SolidColorBrush.Opacity>
                    .4
                </SolidColorBrush.Opacity>
            </SolidColorBrush>

            <SolidColorBrush x:Name="NotFocused"
                             x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}">
                <SolidColorBrush.Color>
                    LightBlue
                </SolidColorBrush.Color>

                <SolidColorBrush.Opacity>
                    .4
                </SolidColorBrush.Opacity>
            </SolidColorBrush>
        </Style.Resources>
    </Style>
</ResourceDictionary>